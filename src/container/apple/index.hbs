<div class='page'>
  <div class='header'>
    {{#with header}}
      <header class='header__content'>
        <div class='header__block'>
          <img
            src='/svg/apple.svg'
            alt='Apple'
            class='header__icon'
          />
          <nav class='header__block'>
            {{#each links}}
              <a
                href='{{url}}'
                class='header__link'
              >{{text}}</a>
            {{/each}}
          </nav>
        </div>

        <div class='header__action'>
          <img
            src='/svg/search.svg'
            alt='Search'
            class='header__icon'
          />
          <img
            src='/svg/profile.svg'
            alt='Profile'
            class='header__icon'
          />
        </div>
      </header>
    </div>

        <div class="ad">
          <div class="ad__content">
            {{#with ad}}
              <div class="ad__title">{{title}}</div>
                <div class="ad__link">
                    {{#with link}}
                      <a href="{{url}}" class="">{{text}}</a>
                    {{/with}}
                </div>
            {{/with}}
          </div>
        </div> 
  {{/with}}

  {{#with iphone_pro}}
    <section class='product product-big product--dark product--iphone-pro product--top'>
      <div class='product__content'>
        <h1 class='product__title'>{{title}}</h1>
        <p class='product__description'>{{descriptions}}</p>
        <div class='product__action'>
          {{#with link}}
            {{#each text}}
              <a href='{{../link}}' class='product__link'>{{this}}</a>
            {{/each}}
          {{/with}}
        </div>
      </div>
    </section>
  {{/with}}

